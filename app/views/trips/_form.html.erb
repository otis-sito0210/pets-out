<div class="container mt-5">

<h1><strong>Schedule your trip</strong>   <i class="fa-solid fa-plane-departure"></i></h1>

<p><i class="fa-regular fa-calendar"></i>       How long you're <strong>staying?</strong></p>

  <%= simple_form_for([place, trip]) do |form| %>

    <div class="form-actions">
      <%= form.input :start_date, as: :date, html5: true %>
      <%= form.input :end_date, as: :date, html5: true %>


      <%= form.button :submit, 'Create Trip', class: 'btn-donate' %>
      <%= form.button :submit, 'Back', class: 'btn-donate' %>
    </div>
  <% end %>
</div>



