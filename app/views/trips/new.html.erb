<div class="container mt-3">

  <%= simple_form_for(@trip) do |form| %>

    <div class="form-actions">
      <%= form.input :start_date, as: :date, html5: true %>
      <%= form.input :end_date, as: :date, html5: true %>
      <%= form.input :place_id, input_html: { value: @place.id}, wrapper_html: { class: "d-none" } %>

      <%= form.button :submit, 'Create Trip', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
