
<div class="container_form">

  <div class="container mt-3 p-2">
    <h3><i class="fa-solid fa-unlock"></i>    Forgot your password?</h3>
  </div>


  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs" style="margin-top: 30px;">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
    </div>

    <div class="form-actions">
      <%= button_tag 'Send me', type: 'submit', class: 'btn-form-1' %>
      <%= button_tag 'Log in', type: 'button', class: 'btn-form-2', onclick: 'window.location.href="' + new_session_path(resource_name) + '";' %><br />
      <!--<%= button_tag 'Sign up', type: 'button', class: 'btn-donate2 m-0', onclick: 'window.location.href="' + new_registration_path(resource_name) + '";' %><br />-->
    </div>
  <% end %>

