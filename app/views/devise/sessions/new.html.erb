
<div class="container_form">

  <div class="container p-2">
    <h2 style="margin-top: 30px;"><i class="fa-solid fa-user-tie"></i> Log in</h2>

  </div>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs" style="margin-top: 30px;">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= button_tag 'Log in', type: 'submit', class: 'btn-form-1' %>
      <%= button_tag 'Sign up', type: 'button', class: 'btn-form-2', onclick: 'window.location.href="' + new_registration_path(resource_name) + '";' %><br />
    </div>
  <% end %>

    <div>
       <%= link_to 'Forgot your password?', new_password_path(resource_name), class: 'btn', role: 'button', style: 'margin-top: 10px; text-decoration: none;' %>

    </div>


