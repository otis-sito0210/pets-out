<div class="container">

  <h1> <%= @pet.name %></h1>

  <%= cl_image_tag(@pet.photo.key, height: 400, width: 500, crop: :fill) if @pet.photo.attached? %>

  <p> <%= @pet.age %></p>
  <p> <%= @pet.size %></p>
  <p> <%= @pet.breed %></p>
  <p> <%= @pet.details %></p>

  <%= link_to "Edit", edit_pet_path(@pet), class: "btn btn-primary" %>

</div>
