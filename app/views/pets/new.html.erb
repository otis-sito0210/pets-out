<div class="container_form mt-5 ">

    <div class="container ml-5 p-1">
      <h2><i class="fa-solid fa-dog"></i>   <strong>New Pet</strong></h2>
    </div>

      <%= simple_form_for(@pet) do |form| %>

        <div class="form-actions">
          <%= form.input :name %>
          <%= form.input :age %>
          <%= form.input :size %>
          <%= form.input :breed %>
          <%= form.input :details %>
          <%= form.input :photo, as: :file %>

          <%= button_tag 'Create Pet', type: 'submit', class: 'btn-donate mt-0' %>
          <%= button_tag 'Back', class: 'btn', role: 'button', style: 'text-decoration: none', onclick: 'javascript:history.back();' %>
        </div>
      <% end %>

</div>

