<div class="container mt-3">
  <h1> Atividades na cidade de <strong><%= @city.local %></strong></h1>
  <% @activities.last(2).each do |activity| %>
    <div class="card-product mt-2">
      <%= cl_image_tag activity.photo.key, height: 400, width: 500, crop: :fill if activity.photo.attached? %>

      <div class="card-product-infos">
        <h2> <%= activity.title %> </h2>
        <p><%= activity.subtitle %></p>
        <p> <%= activity.address %> </p>
        <p> <%= activity.details %> </p>
      </div>

      <%= link_to "Make appointment",  new_appointment_path(trip_id: @trip.id, activity_id: activity.id), class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

