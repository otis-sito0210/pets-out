<div class="container mt-3">
  <p><strong>Edit Activity</strong></p>

  <%= simple_form_for(@activity) do |form| %>

    <div class="form-actions">
      <%= form.input :title %>
      <%= form.input :subtitle %>
      <%= form.input :address %>
      <%= form.input :details %>
      <%= form.input :photo, as: :file %>

      <%= form.button :submit, 'Update Activity', class: 'btn btn-primary' %>
    </div>
  <% end %>

</div>
